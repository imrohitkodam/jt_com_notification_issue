<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_JTICKETING_TITLE_EVENTS_ALL" option="View">
		<message><![CDATA[COM_JTICKETING_TITLE_EVENTS_ALL_DESC]]></message>
	</layout>

	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_categories/models/fields">
			<field name="catid" type="category" extension="com_jticketing"
				class="chzn-done required"
				label="COM_JTICKETING_FORM_LBL_EVENT_CATEGORY"
				description="COM_JTICKETING_FORM_DESC_EVENT_CATEGORY">
				<option value="0">COM_JTICKETING_RESET_FILTER_TO_ALL</option>
			</field>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="advanced" label="COM_MENUS_LAYOUT_FEATURED_OPTIONS">
			<field name="filterNote" type="note" label="COM_JT_CREATOR_MENU_FILTER_NOTE"
				description="COM_JT_CREATOR_MENU_FILTER_NOTE_DESC" default="" hint=""
				class="alert alert-info" width="30" />
			<field name="show_search_filter" type="radio"
				description="COM_JTICKETING_SEARCH_FILTER_DESC" label="COM_JTICKETING_SEARCH_FILTER"
				class="btn-group" default="1">
				<option value="1">COM_JT_YES</option>
				<option value="0">COM_JT_NO</option>
			</field>
			<field name="show_filters" type="radio" description="COM_JT_SHOW_FILTERS_DESC"
				label="COM_JT_SHOW_FILTERS" class="btn-group" default="both">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="both">COM_JTICKETING_SHOW_BASIC_AND_ADVANCED_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_creator_filter" type="radio" description="COM_JT_CREATOR_MENU_DESC"
				label="COM_JT_CREATOR_MENU" class="btn-group" default="basic">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_event_filter" type="radio" description="COM_JT_EVENT_MENU_DESC"
				label="COM_JT_EVENT_MENU" class="btn-group" default="advanced">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_category_filter" type="radio" description="COM_JT_CAT_MENU_DESC"
				label="COM_JT_CAT_MENU" class="btn-group" default="basic">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_location_filter" type="radio" description="COM_JT_LOCATION_MENU_DESC"
				label="COM_JT_LOCATION_MENU" class="btn-group" default="basic">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_date_filter" type="radio" description="COM_JTICKETING_DATE_MENU_DESC"
				label="COM_JTICKETING_DATE_MENU" class="btn-group" default="basic">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_price_filter" type="radio"
				description="COM_JTICKETING_PRICE_MENU_DESC" label="COM_JTICKETING_PRICE_MENU"
				class="btn-group" default="advanced">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_tags_filter" type="radio" description="COM_JTICKETING_TAGS_MENU_DESC"
				label="COM_JTICKETING_TAGS_MENU" class="btn-group" default="advanced">
				<option value="advanced">COM_JTICKETING_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_JTICKETING_SHOW_BASIC_FILTER</option>
				<option value="none">COM_JTICKETING_NONE_OPTION</option>
			</field>
			<field name="show_sorting_options" type="radio" description="COM_JT_SORT_OPTION_DESC"
				label="COM_JT_SORT_OPTION" class="btn-group" default="1">
				<option value="1">COM_JT_YES</option>
				<option value="0">COM_JT_NO</option>
			</field>
			<field name="default_sort_by_option" type="list" description="COM_JT_DEFAULT_SORT_DESC"
				label="COM_JT_DEFAULT_SORT" class="btn-group" default="created">
				<option value="title">COM_JT_TITLE</option>
				<option value="created">COM_JT_CREATED</option>
				<option value="modified">COM_JT_MODIFIED</option>
				<option value="startdate">COM_JT_START_DATE</option>
				<option value="enddate">COM_JT_END_DATE</option>
				<option value="booking_start_date">COM_JT_BOOKING_START_DATE</option>
				<option value="booking_end_date">COM_JT_BOOKING_END_DATE</option>
			</field>
			<field name="filter_order_Dir" type="list" description="COM_JT_DEFAULT_ORDER_DIR_DESC"
				label="COM_JT_DEFAULT_ORDER_DIR" class="btn-group" default="desc">
				<option value="">COM_JT_ORDERING</option>
				<option value="asc">COM_JT_ASC</option>
				<option value="desc">COM_JT_DESC</option>
			</field>

			<field name="featured_event" type="radio" class="btn-group" label="COM_JTICKETING_EVENT_FEATURED_ONLY" default="0" description="COM_JTICKETING_EVENT_FEATURED_DESC">
				<option value="1">COM_JTICKETING_EVENT_YES</option>
				<option value="0">COM_JTICKETING_EVENT_NO</option>
			</field>
			<field name="events_to_show" type="radio" class="btn-group" label="COM_JTICKETING_EVENT_SHOW_TIME" default="show_all" showon="featured_event:0" description="COM_JTICKETING_EVENT_SHOW_TIME_DESC">
				<option value="show_all">COM_JTICKETING_EVENT_ALL</option>
				<option value="upcoming">COM_JTICKETING_EVENT_UPCOMING</option>
				<option value="past">COM_JTICKETING_EVENT_PAST</option>
				<option value="today">COM_JTICKETING_EVENT_TODAY</option>
				<option value="ongoing">COM_JTICKETING_EVENT_ONGOING</option>
			</field>
		</fieldset>
	</fields>
</metadata>