<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >
		<field
			name="search"
			type="text"
			label="COM_JTICKETING_FILTER_SEARCH_NAME"
			hint="COM_JTICKETING_FILTER_SEARCH_NAME"
			description="COM_JTICKETING_FILTER_SEARCH_NAME"
		/>

		<field
			name="categoryfilter"
			type="jtcategories"
			label="COM_JTICKETING_FILTER_SELECT_CATEGORY"
			description="COM_JTICKETING_FILTER_SELECT_CATEGORY"
			onchange="this.form.submit();"
			>
			<option value="">COM_JTICKETING_FILTER_SELECT_CATEGORY</option>
		</field>

		<field
			name="typefilter"
			type="list"
			label="COM_JTICKETING_FILTER_SELECT_VENUE_TYPE"
			description="COM_JTICKETING_FILTER_SELECT_VENUE_TYPE"
			onchange="this.form.submit();"
			>
			<option value="">COM_JTICKETING_FILTER_SELECT_VENUE_TYPE</option>
			<option value="1">COM_JTICKETING_VENUE_TYPEONLINE</option>
			<option value="0">COM_JTICKETING_VENUE_TYPEOFFLINE</option>

		</field>

		<field
			name="privacyfilter"
			type="list"
			label="COM_JTICKETING_FILTER_SELECT_VENUE_PRIVACY"
			description="COM_JTICKETING_FILTER_SELECT_VENUE_PRIVACY"
			onchange="this.form.submit();"
			>
			<option value="">COM_JTICKETING_FILTER_SELECT_VENUE_PRIVACY</option>
			<option value="1">COM_JTICKETING_VENUE_PRIVACY_PUBLIC</option>
			<option value="0">COM_JTICKETING_VENUE_PRIVACY_PRIVATE</option>
		</field>

	<field
			name="statefilter"
			type="list"
			label="state"
			description="COM_JTICKETING_FILTER_SELECT_VENUE_PRIVACY"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_JTICKETING_LIST_LIMIT"
			description="COM_JTICKETING_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
