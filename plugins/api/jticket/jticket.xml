	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>API plugins of Jticketing components of the Joomla!</description>
	<files>
		<filename plugin="jticket">jticket.php</filename>
		<filename>jticket/checkin.php</filename>
		<folder>jticket</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_api_jticket.ini</language>
	</languages>
	<config>
        <fields name="params">

	  <fieldset name="users_allow_access_app_fieldset" label="params" description="">
		  <field name="users_allow_access_app" type="sql" default="" label="Users to allow access to App although not event creator" query="SELECT id, name  FROM #__users" key_field="id" value_field="name" multiple="multiple">
		</field>
    </fieldset>
    </fields>
    </config>
</extension>
