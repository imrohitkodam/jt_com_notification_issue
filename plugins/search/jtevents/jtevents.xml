<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_jtevents</name>
	<creationDate>28th Apr 2025</creationDate>
	<version>5.1.1</version>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<copyright>Copyright (C) 2009 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>PLG_SEARCH_JTEVENTS_XML_DESCRIPTION</description>

	<files>
		<filename plugin="jtevents">jtevents.php</filename>
		<filename>index.html</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_search_jtevents.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_jtevents.sys.ini</language>
	</languages>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="20"
					description="PLG_SEARCH_JTEVENTS_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_JTEVENTS_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_events" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_SEARCH_JTEVENTS_FIELD_EVENTS_DESC"
					label="PLG_SEARCH_JTEVENTS_FIELD_EVENTS_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
