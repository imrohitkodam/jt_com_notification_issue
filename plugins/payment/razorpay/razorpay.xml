<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - Razorpay</name>
	<author>Techjoomla</author>
	<creationDate>12th Aug 2014</creationDate>
	<copyright></copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>1.0</version>
	<description>
		To use the Razorpay payment plugin, you need to set up the webhook URL on your merchant account. Please follow the format specified to configure the webhook URL correctly:	YOUR_DOMAIN/index.php?option=[COM_EXTENSION_NAME]&amp;task=payment.processpayment&amp;processor=razorpay
	</description>
	<files>
		<filename plugin="razorpay">razorpay.php</filename>
		<folder>razorpay</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_razorpay.ini</language>
	</languages>


	<params>
		<param name="api_key" type="text" default="" label="RAZORPAY_API_KEY" description="RAZORPAY_API_KEY_DESC" />
		<param name="api_secret" type="text" default="" label="RAZORPAY_API_SECRET" description="RAZORPAY_API_SECRET_DESC" />
		<param name="webhook_secret" type="text" default="" label="RAZORPAY_WEBHOOK_SECRET" description="RAZORPAY_WEBHOOK_SECRET_DESC" />

		<param type="spacer" />
		<param name="sandbox" type="radio" default="0" label="RAZORPAY_SANDBOX"
			description="RAZORPAY_SANDBOX_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="secure_post" type="radio" default="1" label="secure post(use	https)?"
			description="Use https for secure post">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="plugin_name" type="text" default="Razorpay" label="PLG_NAME" description="" />
		<param name="plugin_hidname" type="hidden" default="razorpay" />
	</params>

	<!-- Fields for Joomla 1.6.x and onwards -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_name" type="text" default="Razorpay" label="PLG_NAME"
				description="" />

				<field name="sandbox" class="btn-group" type="radio" default="0" label="RAZORPAY_SANDBOX"
					description="RAZORPAY_SANDBOX_DESC">
					<option value="0">NO</option>
					<option value="1">YES</option>
				</field>

				<field name="test_mode_note" showon="sandbox:1" type="note" label="PLG_RAZORPAY_TEST_MODE" />
				<field name="api_key_test" showon="sandbox:1" type="text" default="" label="RAZORPAY_API_KEY" description="RAZORPAY_API_KEY_DESC" />
				<field name="api_secret_test" showon="sandbox:1" type="text" default="" label="RAZORPAY_API_SECRET" description="RAZORPAY_API_SECRET_DESC" />

				<field name="live_mode_note" showon="sandbox:0" type="note" label="PLG_RAZORPAY_LIVE_MODE" />
				<field name="api_key_live" showon="sandbox:0" type="text" default="" label="RAZORPAY_API_KEY" description="RAZORPAY_API_KEY_DESC" />
				<field name="api_secret_live" showon="sandbox:0" type="text" default="" label="RAZORPAY_API_SECRET" description="RAZORPAY_API_SECRET_DESC" />

				<field name="webhook_secret" type="text" default="" label="RAZORPAY_WEBHOOK_SECRET" description="RAZORPAY_WEBHOOK_SECRET_DESC" />
				<field name="plugin_hidname" type="hidden" default="razorpay" />
				<field name="log_write" class="btn-group" type="radio" default="0" label="PLG_RAZORPAY_WRITE_LOG"
					description="PLG_RAZORPAY_WRITE_LOG_DESC">
					<option value="0">PLG_RAZORPAY_NO</option>
					<option value="1">PLG_RAZORPAY_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>