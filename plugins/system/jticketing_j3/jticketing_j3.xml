<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>jticketing Joomla3.0</name>
	<creationDate>28th Apr 2025</creationDate>
	<version>5.1.1</version>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<isapplication>true</isapplication>
	<description>Joomla3.0 support for jticketing</description>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_system_jticketing_j3.ini</language>
	</languages>
	<files>
		<file plugin="jticketing_j3">jticketing_j3.php</file>
	</files>

	<config name="params">
		<fields name="params">
			<fieldset name="basic">

				<field name="loadBS3js" class="btn-group" type="radio" default="0" description="JT_SYS_LOAD_BS3_JS_DESC" label="JT_SYS_LOAD_BS3_JS" >
					<option value="1">JT_SYS_YES</option>
					<option value="0">JT_SYS_NO</option>
				</field>


			</fieldset>
		</fields>
	</config>
</extension>
