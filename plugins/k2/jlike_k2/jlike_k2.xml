<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="k2" method="upgrade">
	<name>Jlike K2 Plugin</name>

	<author>Techjoomla</author>
    <copyright>Copyright (C) 2010 - 2023 Techjoomla. All rights reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <creationDate>25th Jan 2022</creationDate>
	<version>4.0.0</version>

	<description>Jlike K2 Plugin to insert likes</description>
	<files>
		<filename plugin="jlike_k2">jlike_k2.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_k2_jlike_k2.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jlike_comments" type="radio" class="btn-group" label="PLG_JLIKE_ALLOW_COMMENT" default="1" description="PLG_JLIKE_ALLOW_COMMENT_DESC">
					<option value="1">PLG_JLIKE_YES</option>
					<option value="0">PLG_JLIKE_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
