				<field name="logActionForLikeDislikeSave" type="radio" label="PLG_ACTIONLOG_JLIKE_LOG_ACTION_LIKE_DISLIKE_SAVE" description="PLG_ACTIONLOG_JLIKE_LOG_ACTION_COMMON_DESC" default="1" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="logActionForLikeUnlikeCommentSave" type="radio" label="PLG_ACTIONLOG_JLIKE_LOG_ACTION_LIKE_UNLIKE_COMMENT_SAVE" description="PLG_ACTIONLOG_JLIKE_LOG_ACTION_COMMON_DESC" default="1" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
