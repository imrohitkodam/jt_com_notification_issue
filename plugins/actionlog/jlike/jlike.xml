	<version>4.0.1</version>
	<description>PLG_ACTIONLOG_JLIKE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="jlike">jlike.php</filename>
		<file>index.html</file>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_actionlog_jlike.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_actionlog_jlike.sys.ini</language>
