				<field name="logActionForCommentDelete" type="radio" label="PLG_ACTIONLOG_JLIKE_LOG_ACTION_COMMENT_DELETE" description="PLG_ACTIONLOG_JLIKE_LOG_ACTION_COMMON_DESC" default="1" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="logActionForTodoSave" type="radio" label="PLG_ACTIONLOG_JLIKE_LOG_ACTION_TODO_SAVE" description="PLG_ACTIONLOG_JLIKE_LOG_ACTION_COMMON_DESC" default="0" class="btn-group btn-group-yesno">
