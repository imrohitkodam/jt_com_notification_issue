<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>JLike Articles Plugin</name>

	<author>Techjoomla</author>
    <copyright>Copyright (C) 2010 - 2023 Techjoomla. All rights reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <creationDate>25th Jan 2022</creationDate>
	<version>4.0.0</version>

	<description>This plugin adds like/dislike button formatting and functionality for Joomla Articles.</description>
	<files>
		<filename plugin="jlike_articles">jlike_articles.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_content_jlike_articles.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jlike_comments" type="radio" class="btn-group" label="PLG_JLIKE_ALLOW_COMMENT" default="1" description="PLG_JLIKE_ALLOW_COMMENT_DESC">
					<option value="1">PLG_JLIKE_YES</option>
					<option value="0">PLG_JLIKE_NO</option>
				</field>
				<field name="jlike_categories" type="category" default="" label="COM_JLIEK_ALLOWED_CATEGORY" element="jma_latestnews_js" multiple="multiple" description="COM_JLIEK_ALLOWED_CATEGORY_DESC" key_field='id' value_field='title' extension="com_content" />

				<field name="recommendation" class="btn-group" type="radio" default="1" label="PLG_ART_JLIKE_RECOMMENDATION" description="PLG_ART_JLIKE_RECOMMENDATION_DESC">
					<option value="1">PLG_JLIKE_YES</option>
					<option value="0">PLG_JLIKE_NO</option>
				</field>

				<field name="assignment" class="btn-group" type="radio" default="1" label="PLG_ART_JLIKE_ASSIGNMENT" description="PLG_ART_JLIKE_ASSIGNMENT_DESC">
					<option value="1">PLG_JLIKE_YES</option>
					<option value="0">PLG_JLIKE_NO</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
