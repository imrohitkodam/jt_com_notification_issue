<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="tjevents" method="upgrade">
	<name>plg_tjevents_googlemeet</name>
	<description>PLG_TJEVENTS_GOOGLEMEET_XML_DESCRIPTION</description>
	<author>Techjoomla</author>
	<authorEmail>contact@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<creationDate>8 Aug 2022</creationDate>
	<copyright>Copyright (C) 2009 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.0</version>
	<files>
		<filename plugin="googlemeet">googlemeet.php</filename>
		<filename>index.html</filename>
		<folder>googlemeet</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_tjevents_googlemeet.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_tjevents_googlemeet.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="debug_integration"
					type="radio"
					label="PLG_TJEVENTS_GOOGLEMEET_DEBUG"
					description="PLG_TJEVENTS_GOOGLEMEET_DEBUG_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					filter="integer"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="log_response"
						type="radio"
						label="PLG_TJEVENTS_GOOGLEMEET_LOG_RESPONSE"
						description="PLG_TJEVENTS_GOOGLEMEET_LOG_RESPONSE_DESC"
						class="btn-group btn-group-yesno"
						default="0"
						showon="debug_integration:1"
						filter="integer"
						>
						<option value="1">JYES</option>
						<option value="0">JNO</option>
					</field>
			</fieldset>
		</fields>
	</config>
</extension>