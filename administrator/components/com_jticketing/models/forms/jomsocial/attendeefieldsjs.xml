<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="label"
				type="text"
				label="COM_JTICKETING_TICKET_FIELD_TITLE"
				description="COM_JTICKETING_TICKET_FIELD_TITLE"
				size="40"
				class="joms-input"
				default=""
				/>

		<field
				name="type"
				type="list"
				label="COM_JTICKETING_TICKET_FIELD_TYPE"
				description="COM_JTICKETING_TICKET_FIELD_TYPE"
				class="input-mini"
				default="">
				<option value="text">COM_JTICKETING_TICKET_FIELD_TYPE_TEXT</option>
				 <option value="textarea">COM_JTICKETING_TICKET_FIELD_TYPE_TEXTAREA</option>
				 <option value="single_select">COM_JTICKETING_TICKET_FIELD_TYPE_SINGLE_SELECT</option>
				 <option value="multi_select">COM_JTICKETING_TICKET_FIELD_TYPE_MULTIPLE_SELECT</option>
				 <option value="calendar">COM_JTICKETING_TICKET_FIELD_TYPE_DATE</option>
				 <option value="radio">COM_JTICKETING_TICKET_FIELD_TYPE_RADIO</option>
			</field>
			<field
				name="default_selected_option"
				type="textarea"
				label="COM_JTICKETING_TICKET_FIELD_DEFAULT_OPTION_LABEL"
				description="COM_JTICKETING_TICKET_FIELD_DEFAULT_OPTION_LABEL"
				class="joms-textarea"
				/>
		<field name="required" type="list" default="0" label="COM_JTICKETING_TICKET_FIELD_REQUIRED" description="COM_JTICKETING_TICKET_FIELD_REQUIRED" class="input-mini mt-3 joms-input-required">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
</form>
