<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="text"
			default="0"
			label="COM_JTICKETING_FORM_LBL_REMINDER_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/>

		<field
			name="created_by"
			type="createdby"
			default=""
			label="COM_JTICKETING_FORM_LBL_REMINDER_CREATED_BY"
			description="COM_JTICKETING_FORM_DESC_REMINDER_CREATED_BY"
		/>

		<field
			name="title"
			type="text"
			size="40"
			class="inputbox"
			label="COM_JTICKETING_FORM_LBL_REMINDER_TITLE"
			description="COM_JTICKETING_FORM_DESC_REMINDER_TITLE"
			required="true"
			filter="safehtml"
		/>

		<field
			name="description"
			type="textarea"
			label="COM_JTICKETING_FORM_LBL_REMINDER_DESCRIPTION"
			description="COM_JTICKETING_FORM_DESC_REMINDER_DESCRIPTION"
			option_on="Yes"
			option_off="Yes"
		/>

		<field
			name="days"
			type="text"
			label="COM_JTICKETING_FORM_LBL_REMINDER_DAYS"
			description="COM_JTICKETING_FORM_DESC_REMINDER_DAYS"
			required="true"
		/>

		<field
			name="subject"
			type="text"
			label="COM_JTICKETING_FORM_LBL_REMINDER_SUBJECT"
			description="COM_JTICKETING_FORM_DESC_REMINDER_SUBJECT"
			required="true"
		/>
		<field
			name="replytoemail"
			type="text"
			label="COM_JTICKETING_FORM_LBL_REMINDER_REPLYTOEMAIL"
			description="COM_JTICKETING_FORM_DESC_REMINDER_REPLYTOEMAIL"
			class="validate-email"
		/>
		<field name="sms"
			type="radio"
			class="btn-group btn-group-yesno"
			label="COM_JTICKETING_FORM_LBL_REMINDER_SMS"
			description="COM_JTICKETING_FORM_DESC_REMINDER_SMS"
			default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="email"
			type="radio"
			class="btn-group btn-group-yesno"
			label="COM_JTICKETING_FORM_LBL_REMINDER_EMAIL"
			description="COM_JTICKETING_FORM_DESC_REMINDER_EMAIL"
			default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>


		<field
			name="css"
			type="textarea"
			label="COM_JTICKETING_FORM_LBL_REMINDER_CSS"
			description="COM_JTICKETING_FORM_DESC_REMINDER_CSS"
			rows="10"
			cols="90"
			option_on="Yes"
			option_off="Yes"
		/>

		<field
			name="sms_template"
			type="textarea"
			label="COM_JTICKETING_FORM_LBL_REMINDER_SMS_TEMPLATE"
			description="COM_JTICKETING_FORM_DESC_REMINDER_SMS_TEMPLATE"
			maxlength="140"
			rows="5"
			cols="40"

		/>

		<field
			name="email_template" 	type="editor" filter="raw" buttons="true"
			height="250px"
			label="COM_JTICKETING_FORM_LBL_REMINDER_EMAIL_TEMPLATE"
			description="COM_JTICKETING_FORM_DESC_REMINDER_EMAIL_TEMPLATE"
		/>

		<field
			name="event_id"
			type="text"
			label="COM_JTICKETING_FORM_LBL_REMINDER_EVENT_ID"
			description="COM_JTICKETING_FORM_DESC_REMINDER_EVENT_ID"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-2">JTRASHED</option>
		</field>

			<field name="checked_out" type="hidden" filter="unset" />
			<field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

	<fieldset name="accesscontrol">

			<field
				name="asset_id"
				type="hidden"
				filter="unset"
			/>
			<field
				name="rules"
				type="rules"
				label="JFIELD_RULES_LABEL"
				translate_label="false"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_jticketing"
				section="reminder"
			/>

	</fieldset>
</form>
