<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >

		<field
			name="search"
			type="text"
			label="COM_JTICKETING_FILTER_SEARCH_NAME"
			description="COM_JTICKETING_FILTER_SEARCH_NAME"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="catid"
			type="category"
			label="JOPTION_FILTER_CATEGORY"
			extension="com_jticketing"
			description="JOPTION_FILTER_CATEGORY_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field
			name="state"
			type="list"
			label="COM_TJLMST_FILTER_PUBLISHED"
			description="COM_TJLMST_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
			<option value="*">JALL</option>

		</field>
		<field
			name="online_offline"
			type="list"
			label="COM_JTICKETING_FILTER_ONLINE_OFFLINE"
			description="COM_JTICKETING_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_JTICKETING_SELECT_COM_ONLINE_OFFLINE</option>
			<option value="1">COM_JTICKETING_SELECT_ONLINE</option>
			<option value="-1">COM_JTICKETING_SELECT_OFFLINE</option>
		</field>

		<field
			name="created_by"
			type="users"
			label="COM_JTICKETING_FILTER_SELECT_USER"
			description="COM_JTICKETING_FILTER_SELECT_USER_DESC"
			onchange="this.form.submit();"
			>
		<option value="">COM_JTICKETING_FILTER_SELECT_USER</option>
		</field>

	</fields>

	<fields name="list">

		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_JTICKETING_LIST_LIMIT"
			description="COM_JTICKETING_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
