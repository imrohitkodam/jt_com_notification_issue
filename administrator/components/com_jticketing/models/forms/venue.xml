<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_jticketing/assets/elements">
		<field name="id"
			type="number"
			default="0"
			label="COM_JTICKETING_FORM_LBL_VENUE_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/>

		<field name="alias"
			type="text"
			maxlength="255"
			label="COM_JTICKETING_FORM_LBL_VENUE_ALIAS"
			description="COM_JTICKETING_FORM_DESC_VENUE_ALIAS"
			filter="alias"
		/>

		<field name="created_by"
			type="user"
			default=""
			label="COM_JTICKETING_FORM_LBL_VENUE_CREATED_BY"
			description="COM_JTICKETING_FORM_DESC_VENUE_CREATED_BY"
		/>

		<field name="modified_by"
			type="modifiedby"
			default=""
			label="COM_JTICKETING_FORM_LBL_VENUE_MODIFIED_BY"
			description="COM_JTICKETING_FORM_DESC_VENUE_MODIFIED_BY"
			filter="unset"
		/>

		<field name="name"
			type="text"
			size="40"
			maxlength="255"
			class="inputbox required"
			label="COM_JTICKETING_FORM_LBL_VENUE_NAME"
			description="COM_JTICKETING_FORM_LBL_VENUE_NAME_DESC"
			required="true"
			filter="string"
		/>

		<field name="state"
			type="radio"
			label="COM_JTICKETING_PUBLISH_VENUE"
			description="COM_JTICKETING_PUBLISH_VENUE_DESC"
			required="true"
			class="inputbox radio btn-group btn-group-yesno"
			size="1"
			filter="int"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="venue_category"
			type="jtcategories"
			class="chzn-done required"
			default=""
			required="true"
			label="COM_JTICKETING_FORM_LBL_VENUE_CATEGORY"
			description="COM_JTICKETING_FORM_DESC_VENUE_CATEGORY"
			filter="int"
		/>

		<field name="online"
			type="radio"
			label="COM_JTICKETING_ONLINE_VENUE"
			description="COM_JTICKETING_ONLINE_VENUE"
			class="inputbox radio btn-group btn-group-yesno"
			size="1"
			filter="int"
			default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="online_provider"
			default="0"
			type="gatewayplgonlineevents"
			label="COM_JTICKETING_ONLINE_EVENTS_PROVIDER"
			description="COM_JTICKETING_ONLINE_EVENTS_PROVIDER_DESC"
		/>

		<field name="description"
			type="editor"
			label="COM_JTICKETING_FORM_LBL_VENUE_DESCRIPTION"
			description="COM_JTICKETING_FORM_DESC_VENUE_DESCRIPTION"
			menu_published="0"
			filter="safehtml"
			width="80%"
			height="250px"
		/>

		<field name="longitude"
			type="hidden"
			size="40"
			default="0.0"
			class="inputbox"
			label="COM_JTICKETING_FORM_LBL_VENUE_LONGITUDE"
			description="COM_JTICKETING_FORM_DESC_VENUE_LONGITUDE"
			filter="string"
		/>

		<field name="latitude"
			type="hidden"
			size="40"
			default="0.0"
			class="inputbox"
			label="COM_JTICKETING_FORM_LBL_VENUE_LATITUDE"
			description="COM_JTICKETING_FORM_DESC_VENUE_LATITUDE"
			filter="string"
		/>

		<field name="privacy"
			type="radio"
			class="inputbox radio btn-group btn-group-yesno"
			label="COM_JTICKETING_FORM_LBL_VENUE_PRIVACY"
			description="COM_JTICKETING_FORM_DESC_VENUE_PRIVACY"
			filter="int"
			default="1">
			<option value="1">COM_JTICKETING_VENUE_PRIVACY_PUBLIC</option>
			<option value="0">COM_JTICKETING_VENUE_PRIVACY_PRIVATE</option>
		</field>

		<field name="address"
			type="address"
			class="inputbox required"
			label="COM_JTICKETING_FORM_LBL_VENUE_ADDRESS"
			filter="string"
			description="COM_JTICKETING_FORM_DESC_VENUE_ADDRESS"
		/>

		<field name="seats_capacity" 
			type="list" 
			default="1" 
			label="COM_JTICKETING_TICKET_VENUE_SEATS_AVAILABLE_LABEL" 
			description="COM_JTICKETING_TICKET_VENUE_SEATS_AVAILABLE_DESC">
			<option value="1">COM_JTICKETING_TICKET_UNLIMITED_SEATS_YES</option>
			<option value="0">COM_JTICKETING_TICKET_UNLIMITED_SEATS_NO</option>
		</field>

		<field
			name="capacity_count"
			type="number"
			label="COM_JTICKETING_TICKET_VENUE_NO_OF_SEATS_LABEL"
			description="COM_JTICKETING_TICKET_VENUE_NO_OF_SEATS_DESC"
			showon="seats_capacity:0"
			size="20"
			class="inputbox avail"
			default=""
		/>

		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
	</fieldset>

	<fieldset>
		<field name="id" type="hidden"/>

		<field name="gallery_file"
			type="file"
			label="COM_JTICKETING_GALLERY_FILE"
			description="COM_JTICKETING_GALLERY_FILE_DESC"
			onchange="tjMediaFile.validateFile(this, 1, 1, 'venue')"
			menu_published="0"
			accept="image/jpeg,image/png,image/jpg,video/mp4,video/webm">
		</field>

		<field name="gallery_link"
			type="text"
			label="COM_JTICKETING_GALLERY_LINK"
			description="COM_JTICKETING_GALLERY_LINK_DESC"
			class="inputbox"
			default=""
		/>
	</fieldset>
</form>
