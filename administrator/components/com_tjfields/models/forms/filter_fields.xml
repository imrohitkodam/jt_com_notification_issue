<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="JSEARCH_FILTER" class="js-stools-search-string" />
		<field name="type" type="tjfieldfields" onchange="this.form.submit();">
			<option value="">COM_TJFIELDS_FILTER_SELECT_FIELD_TYPE_LABEL</option>
		</field>
		<field name="state" type="status" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field name="limit" type="limitbox" class="input-mini" default="25" onchange="this.form.submit();" />
	</fields>
</form>
