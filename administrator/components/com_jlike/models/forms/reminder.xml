<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="ordering" />
		<field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset" />
		<field name="created_by" default="0" label="COM_JLIKE_FORM_LBL_REMINDER_CREATED_BY" description="COM_JLIKE_FORM_DESC_REMINDER_CREATED_BY" hidden="true" hint="COM_JLIKE_FORM_LBL_REMINDER_CREATED_BY" />
		<field name="modified_by" default="0" label="COM_JLIKE_FORM_LBL_REMINDER_MODIFIED_BY" description="COM_JLIKE_FORM_DESC_REMINDER_MODIFIED_BY" hidden="true" hint="COM_JLIKE_FORM_LBL_REMINDER_MODIFIED_BY" />
		<field name="title" required="true" label="COM_JLIKE_FORM_LBL_REMINDER_TITLE" description="COM_JLIKE_FORM_DESC_REMINDER_TITLE" hint="COM_JLIKE_FORM_LBL_REMINDER_TITLE" />
		<field name="days_before" type="number" label="COM_JLIKE_FORM_LBL_REMINDER_DAYS_BEFORE" description="COM_JLIKE_FORM_DESC_REMINDER_DAYS_BEFORE" hint="COM_JLIKE_FORM_LBL_REMINDER_DAYS_BEFORE" required="true" class="validate-positive-number" filter="int" />
		<field default="" class="inputbox required" for="jform_content_type" description="COM_JLIKE_FORM_DESC_REMINDER_CONTENT_TYPE" label="COM_JLIKE_FORM_LBL_REMINDER_CONTENT_TYPE" name="content_type" type="jlikecontenttype" onchange="getContentByType()" required="required" />
		<field name ="select_content" default="COM_JLIKE_FORM_LBL_REMINDER_SELECT_CONTENT_IDS" class="inputbox" for="jform_select_content" description="COM_JLIKE_FORM_DESC_REMINDER_SELECT_CONTENT" label="COM_JLIKE_FORM_LBL_REMINDER_SELECT_CONTENT" type="list" multiple="multiple" hint="COM_JLIKE_FORM_LBL_REMINDER_SELECT_CONTENT" />
		<field name="type" type="text" class="inputbox" default='email' label="COM_JLIKE_FORM_LBL_REMINDER_SENT_TYPE" description="COM_JLIKE_FORM_DESC_REMINDER_SENT_TYPE" hidden="true" hint="COM_JLIKE_FORM_LBL_REMINDER_SENT_TYPE" />
		<field name="subject" required="true" label="COM_JLIKE_FORM_LBL_REMINDER_SUBJECT" description="COM_JLIKE_FORM_DESC_REMINDER_SUBJECT" hint="COM_JLIKE_FORM_LBL_REMINDER_SUBJECT" />
		<field name="email_template" required="true" type="editor" buttons="true" class="inputbox" filter="safehtml" label="COM_JLIKE_FORM_LBL_REMINDER_EMAIL_TEMPLATE" description="COM_JLIKE_FORM_DESC_REMINDER_EMAIL_TEMPLATE" hint="COM_JLIKE_FORM_LBL_REMINDER_EMAIL_TEMPLATE" />
		<field name="cc" type="text" onchange="validemail()" label="COM_JLIKE_FORM_LBL_REMINDER_ENABLE_CC" description="COM_JLIKE_FORM_DESC_REMINDER_ENABLE_CC" hint="COM_JLIKE_FORM_LBL_REMINDER_ENABLE_CC_HINT" />
		<field name="mailfrom" type="email" label="COM_JLIKE_MAIL_FROM" description="COM_JLIKE_MAIL_FROM_DESC" />
		<field name="fromname" type="text" label="COM_JLIKE_MAIL_FROM_NAME" description="COM_JLIKE_MAIL_FROM_NAME_DESC" />
		<field name="replyto" type="email" label="COM_JLIKE_REPLY_TO" description="COM_JLIKE_REPLY_TO_DESC" />
		<field name="replytoname" type="text" label="COM_JLIKE_REPLY_TO_NAME" description="COM_JLIKE_REPLY_TO_NAME_DESC" />
	</fieldset>
</form>
