<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
			type="hidden"
			default="0"
			label="COM_JLIKE_TYPE_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="client"
			type="text"
			label="COM_JLIKE_RATING_TYPE_COMPONENT"
			description="COM_JLIKE_RATING_TYPE_COMPONENT_DESC"/>

		<field name="code"
			type="text"
			label="COM_JLIKE_RATING_TYPE_CODE"
			required="true"
			description="COM_JLIKE_RATING_TYPE_CODE_DESC"
			hint="e.g. ARTICLE_RATING"
			maxlength="100"
			filter="WORD"
			/>

		<field name="title"
			type="text"
			required="true"
			label="COM_JLIKE_RATING_TYPE_RATING_TITLE"
			description="COM_JLIKE_RATING_TYPE_RATING_TITLE_DESC"
			filter="CMD"
			/>
		<field
			name="show_title"
			type="radio"
			label="COM_JLIKE_RATING_TYPE_SHOW_TITLE"
			description="COM_JLIKE_RATING_TYPE_SHOW_TITLE_DESC"
			default="2"
			class="btn-group"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
			<option value="2">COM_JLIKE_RATING_TYPE_SHOW_TITLE_YES_MANDATORY</option>
		</field>
		<field
			name="title_required"
			type="hidden"
			label=""
			description=""
			default="0"/>
		<field
			name="show_rating"
			type="radio"
			label="COM_JLIKE_RATING_TYPE_SHOW_RATING"
			description="COM_JLIKE_RATING_TYPE_SHOW_RATING_DESC"
			default="2"
			class="btn-group"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
			<option value="2">COM_JLIKE_RATING_TYPE_SHOW_TITLE_YES_MANDATORY</option>
		</field>
		<field name="rating_scale"
			type="text"
			label="COM_JLIKE_RATING_TYPE_RATING_SCALE"
			default="5"
			required="true"
			description="COM_JLIKE_RATING_TYPE_RATING_SCALE_DESC"/>
		<field
			name="show_review"
			type="radio"
			label="COM_JLIKE_RATING_TYPE_SHOW_REVIEW"
			description="COM_JLIKE_RATING_TYPE_SHOW_REVIEW_DESC"
			default="2"
			class="btn-group"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
			<option value="2">COM_JLIKE_RATING_TYPE_SHOW_TITLE_YES_MANDATORY</option>
		</field>
		<field
			name="tjucm_type_id"
			type="tjucmtype"
			label="COM_JLIKE_RATING_TYPE_TJUCM_TYPE"
			require="true"
			addfieldpath="/components/com_jlike/models/fields/"
			description="COM_JLIKE_RATING_TYPE_TJUCM_TYPE_DESC">
			<option value=""></option>
		</field>
		<field
			name="show_all_rating"
			type="radio"
			label="COM_JLIKE_RATING_TYPE_SHOW_ALL_RATING"
			description="COM_JLIKE_RATING_TYPE_SHOW_ALL_RATING_DESC"
			default="1"
			class="btn-group"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="state"
			default="1"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	</fieldset>
</form>
