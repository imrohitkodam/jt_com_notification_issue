			<option value="1">COM_JLIKE_YES</option>
			<option value="0">COM_JLIKE_NO</option>
		</field>

		<field name="assignment" class="btn-group" type="radio" default="0" label="COM_JLIKE_ASSIGNMENT" description="COM_JLIKE_ASSIGNMENT_DESC">
			<option value="1">COM_JLIKE_YES</option>
			<option value="0">COM_JLIKE_NO</option>
		</field>

		<field name="which_users_in_list" type="radio" default="1" label="COM_JLIKE_WHICH_USERS_TO_SHOW_IN_LIST" description="COM_JLIKE_WHICH_USERS_TO_SHOW_IN_LIST_DESC">
			<option value="0">COM_JLIKE_FRIENDS</option>
			<option value="1">COM_JLIKE_ALL</option>
		</field>
		<!--Enable/disable email notification assign/recommend-->
		<field name="send_auto_reminders" class="btn-group" default="0" type="radio" label="COM_JLIKE_SEND_AUTO_NOTIFICATION" description="COM_JLIKE_SEND_AUTO_NOTIFICATION_DESC">
 		<option value="1">COM_JLIKE_YES</option>
 		<option value="0">COM_JLIKE_NO</option>
 		</field>
