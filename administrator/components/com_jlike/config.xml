	</fieldset>

	<fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL" >

		<field name="rules" type="rules" component="com_jlike" class="inputbox" filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

	<fieldset name="jlike_reminders_setting" label="JCONFIG_REMINDERS_SETTING_LABEL" >
		<!--Set batch size for the reminders-->
 		<field name="reminder_batch_size" default="0" type="number" min = "1" label="COM_JLIKE_REMINDER_BATCH_SIZE" description="COM_JLIKE_REMINDER_BATCH_SIZE_DESC" class="validate-number" />
	</fieldset>
	<fieldset name="jlike_path_setting" label="JCONFIG_PATH_SETTING_LABEL" >
