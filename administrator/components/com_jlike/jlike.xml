<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD component 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/component-install.dtd">
<extension type="component" version="2.5" method="upgrade">
  <name>JLike</name>
  <author>Techjoomla</author>
  <authorEmail>extensions@techjoomla.com</authorEmail>
  <authorUrl>https://techjoomla.com</authorUrl>
  <copyright>Copyright (C) 2010 - 2023 Techjoomla. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <creationDate>8th Dec 2023</creationDate>
  <version>4.0.1</version>
  <description>
    <![CDATA[
             <div align="center">
             <div class="alert alert-success" style="background-color:#DFF0D8;border-color:#D6E9C6;color: #468847;padding: 1px 0;">
             <div><a href="http://techjoomla.com/"><img src="../components/com_jlike/assets/images/jlike_logo.png" alt="some_text"></a></div>
             <div style="font-weight:bold;">JLike is a powerful like system for your entire site.</div>
             <h4><a href="http://techjoomla.com/table/extension-documentation/documentation-for-jlike-formerly-jomlike/" title="">Documentation</a> | <a href="http://demos.techjoomla.com/jomsocial/">Demo</a> </h4>
             <p> </p>
             </div>
             </div>
    ]]>
  </description>
  <files folder="site">
    <filename>classification.ini</filename>
    <filename>controller.php</filename>
    <filename>index.html</filename>
    <filename>jlike.php</filename>
    <filename>helper.php</filename>
    <filename>defines.php</filename>
    <folder>assets</folder>
    <folder>comments</folder>
    <folder>controllers</folder>
    <folder>helpers</folder>
    <folder>models</folder>
    <folder>tables</folder>
    <folder>views</folder>
    <folder>includes</folder>
  </files>
  <languages folder="site/language">
    <language tag="en-GB">/en-GB/en-GB.com_jlike.ini</language>
  </languages>
  <administration>
    <menu img="components/com_jlike/assets/images/icons/jlike_logo.png">COM_JLIKE</menu>
    <submenu>
      <menu link="option=com_jlike&amp;view=dashboard">COM_JLIKE_DASHBOARD</menu>
      <menu link="option=com_jlike&amp;view=element_config">COM_JLIKE_ELEMENT_CONFIG</menu>
      <menu link="option=com_jlike&amp;view=contents">COM_JLIKE_TITLE_CONTENTS</menu>
      <menu link="option=com_jlike&amp;view=buttonset">COM_JLIKE_BUTTON_SETTINGS</menu>
      <menu link="option=com_jlike&amp;view=annotations">COM_JLIKE_TITLE_ANNOTATIONS</menu>
      <menu link="option=com_jlike&amp;view=reminders">COM_JLIKE_TITLE_REMINDERS</menu>
      <menu link="option=com_jlike&amp;view=types">COM_JLIKE_TITLE_PATHS_TYPES</menu>
      <menu link="option=com_jlike&amp;view=paths">COM_JLIKE_TITLE_PATHS</menu>
      <menu link="option=com_jlike&amp;view=ratingtypes">COM_JLIKE_TITLE_RATING_TYPES</menu>
      <menu link="option=com_jlike&amp;view=ratings">COM_JLIKE_TITLE_VIEW_RATING</menu>
      <menu link="option=com_jlike&amp;view=about">COM_JLIKE_TITLE_ABOUT</menu>
    </submenu>
    <files folder="admin">
      <filename>controller.php</filename>
      <filename>jlike.php</filename>
      <filename>config.xml</filename>
      <filename>access.xml</filename>
      <filename>index.html</filename>
      <filename>Jlike_notification.alert</filename>
      <filename>install.sql</filename>
      <filename>deletelist.php</filename>
      <filename>path_params.json</filename>
      <filename>tjnotificationTemplates.json</filename>
      <folder>assets</folder>
      <folder>helpers</folder>
      <folder>controllers</folder>
      <folder>models</folder>
      <folder>tables</folder>
      <folder>views</folder>
      <folder>images</folder>
      <folder>elements</folder>
      <folder>sql</folder>
      <folder>houseKeeping</folder>
    </files>
    <languages folder="admin/language">
      <language tag="en-GB">/en-GB/en-GB.com_jlike.ini</language>
      <language tag="en-GB">/en-GB/en-GB.com_jlike.sys.ini</language>
      <language tag="en-GB">/en-GB/en-GB.com_jlike.menu.ini</language>
    </languages>
  </administration>
  <media destination="com_jlike" folder="media">
    <folder>font-awesome</folder>
    <folder>vendors</folder>
    <folder>images</folder>
    <folder>js</folder>
  </media>
  <install>
    <sql>
      <file charset="utf8" driver="mysql">install.sql</file>
    </sql>
  </install>
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates/mysql</schemapath>
    </schemas>
  </update>
  <scriptfile>script.jlike.php</scriptfile>
  <!-- default component params values backend -->
  <config>
    <fields>
      <fieldset>
        <field name="integration" default="joomla" />
        <field name="allow_dislike" default="1" />
        <field name="allow_annotation" default="1" />
        <field name="allow_user_lables" default="1" />
        <field name="show_user" default="1" />
        <field name="which_users_to_show" default="0" />
        <field name="allow_comments" default="1" />
        <field name="no_of_commets_to_show" default="5" />
        <field name="allow_threaded_comment" default="1" />
        <field name="threaded_level" default="3" />
        <field name="limit_on_comment_lenght" default="0" />
        <field name="comment_length" default="160" />
        <field name="js_notification" default="0" />
        <field name="js_notification_replies" default="0" />
        <field name="like_dislike_comments" default="1" />
        <field name="show_comment_dislike_button" default="1" />
        <field name="js_notification_on_like" default="0" />
        <field name="js_notification_on_dislike" default="0" />
        <field name="jlike_enable_rating" default="0" />
        <field name="rating_length" default="5" />
        <field name="jlike_rating_image" default="stars" />
        <field name="jlike_allow_rating_edit" default="1" />
        <field name="recommendation" default="0" />
        <field name="assignment" default="0" />
        <field name="which_users_in_list" default="1" />
        <field name="bootstrap_version" default="bs3" />
        <!-- <field name="get_fixdb_btn" default="0" /> -->
      </fieldset>
    </fields>
  </config>
</extension>
